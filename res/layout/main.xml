<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/relative_layout" android:paddingRight="@dimen/relative_layout"
    android:id="@+id/relativeLayout" android:paddingBottom="@dimen/relative_layout"
    android:paddingTop="@dimen/relative_layout">
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Czy wiedziałeś, że..."
      android:id="@+id/textView"
      android:layout_marginTop="52dp" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
      android:textColor="@android:color/white"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:text="Paznokcie u rąk rosną cztery razy szybciej niż u nóg."
      android:id="@+id/factTextView"
      android:layout_centerVertical="true" android:layout_alignParentStart="true"
      android:textSize="32dp"/>
  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Pokaż następną ciekawostkę"
      android:id="@+id/button" android:layout_alignParentBottom="true"
      android:layout_alignParentStart="false" android:layout_centerHorizontal="true"
      android:background="@android:color/white" android:textColor="@android:color/black"/>
</RelativeLayout>